{
  "manifest_version": 2,
  "name": "Find and mark",
  "version": "1.0.0",
  "description": "my first chrome extension",
  "short_name": "Find Mark",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "background.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Find and mark me",
    "default_popup": "popup.html",
    "default_icon":  "loupe.png"
  },
  "icons": {
    "16": "loupe.png",
    "32": "loupe.png",
    "48": "loupe.png",
    "128": "loupe.png"
  }
}
